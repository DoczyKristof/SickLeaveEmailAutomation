<Window x:Class="SickLeaveEmailAutomation.WPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SickLeaveEmailAutomation.WPF.ViewModel"
        Title="Scanner App" Height="400" Width="525"
        ResizeMode="CanMinimize">
    <Window.DataContext>
        <local:ScanViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Scan" Command="{Binding ScanCommand}" Width="100" Margin="0 0 0 10"/>
            <TextBox Text="{Binding ScanModel.ImagePath}" IsReadOnly="True" Width="400" Margin="0 0 0 10"/>
            <Image Source="{Binding ScanModel.ImagePath}" Height="200" Width="200" Margin="0 0 0 10"/>
            <ProgressBar Height="20" Width="400" Value="{Binding Progress}" Margin="0 0 0 10"/>
            <TextBlock Text="{Binding ProgressMessage}" Margin="0 0 0 10" />
        </StackPanel>
    </Grid>
</Window>
